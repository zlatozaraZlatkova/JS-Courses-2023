<section id="details-page">
{{#with amendedMovie}}
  <div class="main_card">
    <div class="card_left">
      <div class="card_datails">

        <h1>{{title}}</h1>
        <div class="card-movie">
          <div class="first-info">
            <p class="card-genre">Genre: {{genre}}</p>
            <p class="card-director">Director: {{director}}</p>
          </div>
          <div class="second-info">
            <p class="card-year">Year: {{year}}</p>
            <p class="card-ranking">Rating: <span id="stars">{{#each stars}}&#x2605;{{/each}}</span></p>
          </div>

        </div>

        <p class="disc">Description: {{description}}</p>
      </div>
       {{#if isOwner}}
      <div class="details-btn">
  
        <a href="{{_id}}/attach" id="add-button">Add</a>
        <a href="{{_id}}/edit" id="edit-button">Edit</a>
        <a href="{{_id}}/delete" id="delete-button">Delete</a>
      </div>
       {{/if}}

    </div>
    <div class="card_right">
      <img src="{{imageURL}}" alt="image">
    </div>
  </div>

  <div class="main-cast-card">
    {{#if castList}}
     {{>castCard}}
    {{else}}
    <div class="no-cast">
      <p>There are no casts added yet...</p>
    </div>
    {{/if}}
  </div>
{{/with}}
</section>