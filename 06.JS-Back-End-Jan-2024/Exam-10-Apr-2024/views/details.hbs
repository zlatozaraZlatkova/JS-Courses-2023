

<section id="details-info">
  <h1>Details</h1>
  <div class="volcano-image">
    <img src="{{volcano.imageURL}}">
  </div>

  <div class="volcano-info">
    <div class="volcano-text">
      <h1 id="name">{{volcano.name}}</h1>
      <h3 id="location">Location: {{volcano.location}}</h3>
      <p id="type">Volcano Type: {{volcano.typeVolcano}}</p>
      <p id="elevation"><span>Elevation: {{volcano.elevation}}</span></p>
      <p id="last-eruption">Year of Last Eruption: {{volcano.lastEruption}}</p>
      <p id="votes">Vote's Count: {{volcano.totalVotes}}</p>
      <p id="description">{{volcano.description}}</p>
    </div>
    {{#if hasUser}}

    <div class="product-btn">
      <!--Only for registered user and author of the publication -->
      {{#if volcano.isOwner}}
      <div class="author">
        <a href="/catalog/details/{{volcano._id}}/edit" class="btn-edit">Edit</a>
        <a href="/catalog/details/{{volcano._id}}/delete" class="btn-delete">Delete</a>
      </div>
      {{else}}
      
      {{#if volcano.isVoted}}
       <!-- Logged in user who has already vote for this volcano-->
      <p class="vote-message">You've already voted for this volcano!</p>
      {{else}}

      <!-- Logged in user who has not yet vote for this volcano-->
      <a href="/catalog/details/{{volcano._id}}/vote" class="btn-vote">Vote</a>
      {{/if}}

     
    </div>

    {{/if}}

    {{/if}}

  </div>

</section>