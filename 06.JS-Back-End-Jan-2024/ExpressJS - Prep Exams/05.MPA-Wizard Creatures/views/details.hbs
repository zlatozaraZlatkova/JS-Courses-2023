
<section id="details-page">

  <div class="main_card">
    <div class="card_left">
      <div class="card_datails">

        <h1>Name: {{creature.name}}</h1>
        <h3>Created by an author: {{creature.author}}</h3>
        <div class="card_character">
          <p class="card-species">Species: {{creature.species}}</p>
          <p class="card-skin">Skin color: {{creature.skinColor}}</p>
          <p class="card-eye">Eye Color: {{creature.eyeColor}}</p>
        </div>

        <p class="disc">Description: {{creature.description}}.</p>
        {{#if hasUser}}

        <!-- If there is no registered user, do not display buttons-->
        <div class="social-btn">
     
          {{#if creature.isOwner}}
          <!-- Only for registered user and author of the post -->
          <a href="/catalog/details/{{creature._id}}/edit" class="edit-btn">Edit</a>
          <a href="/catalog/details/{{creature._id}}/delete" class="del-btn">Delete</a>
          {{else}}
          {{#if creature.isVoted}}
          <!-- logged in user who has already voted-->
          <p class="thanks-for-vote">Thanks For Voting</p>
          {{else}}
          <!-- logged in users, who have not yet voted-->
          <a href="/catalog/details/{{creature._id}}/vote" class="vote-up">Vote</a>

          {{/if}}
          {{/if}}
        </div>

        {{/if}}
      
      </div>
    </div>
    <div class="card_right">
      <img src="{{creature.imageURL}}" alt="image">
    </div>
  </div>

</section>



<section id="votes">
  <div class="vote-info">
    <div class="card_left">
      <div class="card_datails">
        <h1>Votes</h1>
        <div class="card_vote">

          <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
          <p class="PV">Total rating of votes: {{creature.totalVotes}}</p>
        </div>
        {{#if creature.totalVotes}}
        <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
        <p class="disc">People who voted for the post - {{#each creature.votedUser}}{{this}}{{/each}}</p>
        {{else}}
        <!-- If not display: -->
        <p class="disc">People who voted for the post - No one has voted yet.</p>
        {{/if}}
      </div>
    </div>
  </div>
</section>

