
<section id="my-posts">
  <h1>My post</h1>

  {{#if userPosts}}
  <div class="my-container">
    <!-- If there are own posts in the database display each of them -->

    {{#each userPosts}}
    <div class="my-card">
      <div class="card-header">
        <img src="{{imageURL}}" />
      </div>
      <div class="card-body">
        <span class="tag tag-teal">Species: {{species}}</span>
        <h4>Name: {{name}}</h4>
        <div class="user">
          <div class="user-info">
            
            <h5>Author: {{owner.firstName}} {{owner.lastName}}</h5>
           
            <small>Rating of votes: {{usersVotesList.length}}</small>
        
            <a href="/catalog/details/{{_id}}" class="details_btn">Details</a>

          </div>
        </div>
      </div>
    </div>
    {{/each}}

    {{else}}
    <!-- If there are still no own posts in the database display: -->
    <div class="no-posts">
      <p class="no-offer">There are no own posts yet...</p>
    </div>
    {{/if}}
  </div>
</section>

