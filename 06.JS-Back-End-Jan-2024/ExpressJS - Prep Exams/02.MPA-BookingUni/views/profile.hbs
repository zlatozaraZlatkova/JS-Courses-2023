<section id="viewhotelDetails">
  {{#with user}}
  <div class="profile"><img src="../static/img/profile.png" alt="default user" />
    <h3>User Info:</h3>
    <div class="flex">
      <p>Username: </p>
      <p>{{username}}</p>
    </div>
    <div class="flex">
      <p>Email: </p>
      <p>{{email}}</p>
    </div>

    <div class="flex">
      <p>Reservations: </p>
      
      {{#each bookings}}
      <p><span>{{this}}</span></p>
  
      {{/each}}
    </div>

  </div>
  {{/with}}
</section>