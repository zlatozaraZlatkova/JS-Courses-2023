<section id="extras-section">
  <h1 class="item">{{room.name}}</h1>
  <div class="item padded">

    <main class="layout right large">

      <div class="col">

        <img src="{{room.imgUrl}}" class="img-large">

      </div>

      <div class="content pad-med">

        <p>Outdoor Activity:</p>

        <form method="post" action="/activity/{{room._id}}/extras">
          <div class="">
            <ul class="catalog">
              {{#each activities}}

              <li><label><input type="checkbox" name="{{_id}}" {{#if checked}}checked{{/if}}> {{label}} <img
                    class="activity-icon" src="{{iconUrl}}"></label></li>

              {{/each}}
            </ul>
          </div>
          <div class="pad-top">
            <button class="action">Confirm Activities</button>
            </div>
        </form>

      </div>
    </main>
  </div>
</section>