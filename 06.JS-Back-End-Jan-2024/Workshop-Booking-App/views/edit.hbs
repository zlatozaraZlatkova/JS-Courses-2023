<section id="edit-section" class="">

  <h1 class="item">Edit Accommodation</h1>
  
  <main class="item padded align-center">

    <form method="post" action="/edit/{{room._id}}" class="layout left large">

      {{#if error}}
      <div class="error-box">
        {{#each error.messages}}
        <p>{{this}}</p>
        {{/each}}
      </div>
      {{/if}}

      {{#with room}}
      <div class="col aligned">
        <label><span>Name:</span>
          <input {{#if error.fields.name}}class="field-error"{{/if}}type="text" id="name" name="name" value="{{room.name}}" /></label>
        <label><span>Location:</span>
          <input  {{#if error.fields.name}}class="field-error"{{/if}}type="text" id="city" name="city" value="{{room.city}}" /></label>
        <label><span>Bads</span>
          <input  {{#if error.fields.name}}class="field-error"{{/if}}type="number" id="beds" name="beds" value="{{room.beds}}" /></label>
        <label><span>Price:</span>
          <input  {{#if error.fields.name}}class="field-error"{{/if}}type="number" id="price" name="price" value="{{room.price}}" /></label>
        <label><span>Image URL:</span>
          <input  {{#if error.fields.name}}class="field-error"{{/if}}type="text" id="city" name="imgUrl" value="{{room.imgUrl}}" /></label>
      </div>

      <div class="content pad-med align-center vertical">
        <label>
          <span>Description</span>
          <textarea {{#if error.fields.description}}class="field-error"{{/if}} name="description">{{room.description}}</textarea>
        </label>

        <div class="align-center">
          <input class="action" type="submit" value="Update Item">
        </div>
      </div>
      {{/with}}
    </form>

  </main>

</section>