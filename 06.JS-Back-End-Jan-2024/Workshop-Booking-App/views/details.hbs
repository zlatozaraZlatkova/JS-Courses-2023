<section id="catalog-section">

  {{#with room}}
  <h1 class="item">{{name}}</h1>
  <div class="item padded">
    <main class="layout right large">
      <div class="col">
        <img src="{{imgUrl}}" class="img-large" />
      </div>

      <div class="content pad-med">
        <p>Location: <strong>{{city}}</strong></p>
        <p>{{description}}</p>

        <div class="align-left">
          <div class="pad-top">Maximum {{beds}} people</div>
          <div class="pad-top">Price per night:<strong> {{price}}â‚¬</strong></div>
          <ul class="catalog pad-med">
            {{#each activities}}
            <li>{{label}} <img class="activity-icon" src="{{iconUrl}}"></li>
            {{/each}}
          </ul>
        </div>
        {{#if isOwner}}
        <div class="align-left">
          <a class="action-edit" href="/room/{{_id}}/edit">Edit</a>
          <a class="action" href="/activity/{{_id}}/extras">Select Activities</a>
          <a class="action-del" href="/delete/{{_id}}">Delete</a>
        </div>

        {{/if}}
      </div>
    </main>
    {{/with}}

    {{#if hasUser}}
    <footer class="footer-item ">Listed by (TODO add owner)</footer>
    {{/if}}

  </div>

</section>