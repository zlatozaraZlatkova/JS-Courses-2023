<section id="create-section" class="">

  <h1 class="item">New Accommodation</h1>

  <main class="item padded align-center">

    <form method="post" action="/create" class="layout left large">

      {{#if error}}
      <div class="error-box">
        {{#each error}}
        <p>{{this}}</p>
        {{/each}}

      </div>
       {{/if}}

      <div class="col aligned">
        <label><span>Name:</span>
          <input type="text" id="name" name="name" /></label>
        <label><span>Location:</span>
          <input type="text" id="city" name="city" /></label>
        <label><span>Bads</span>
          <input type="number" id="beds" name="beds" /></label>
        <label><span>Price:</span>
          <input type="number" id="price" name="price" /></label>
        <label><span>Image URL:</span>
          <input type="text" id="city" name="imgUrl" /></label>
      </div>

      <div class="content pad-med align-center vertical">
        <label>
          <span>Description</span>
          <textarea {{#if error.fields.description}}class="field-error" {{/if}}
            name="description">{{body.description}}</textarea>
        </label>

        <div class="align-center">
          <input class="action" type="submit" value="Publish Item">
        </div>
      </div>

    </form>
  </main>

</section>